(app-arg (parse "{{{fun {b} {fun {a} {openbox b}}} {newbox 9}} {newbox 10}}"))

(app-ft (app-ft (parse "{{{fun {b} {fun {a} {openbox b}}} {newbox 9}} {newbox 10}}")))
(app-arg (app-ft (parse "{{{fun {b} {fun {a} {openbox b}}} {newbox 9}} {newbox 10}}")))

